<?xml version="1.0" encoding="UTF-8"?>
<project name="LennoxLauncher" default="help">
    <property environment="env" />
    <!-- XTREAMER_MANIFEST_DIR must be set in build script. -->
    <condition property="manifest.dir" value="${env.XTREAMER_MANIFEST_DIR}">
        <isset property="env.XTREAMER_MANIFEST_DIR" />
    </condition>

    <fail message="manifest.dir is missing. please check environment is initialising correctly" unless="manifest.dir" />

    <property name="target" value="android-17" />

    <import file="custom_rules.xml" optional="true" />
    <import file="${manifest.dir}/custom-android-build.xml" />

</project>
