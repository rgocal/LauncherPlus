<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher2.PreviewLayout
    android:padding="5.0dip"
    launcher:cellCountX="3"
    launcher:cellCountY="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.android.launcher2.DragLayer
        android:id="@+id/preview_drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.android.launcher2.CellLayout
            android:layout_gravity="center"
            android:id="@+id/preview"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            launcher:cellLayoutType="@integer/cell_layout_preview"
            launcher:cellWidth="@dimen/preview_cell_width"
            launcher:cellHeight="@dimen/preview_cell_height"
            launcher:widthGap="@dimen/preview_gap_width"
            launcher:heightGap="@dimen/preview_gap_height"
            launcher:maxGap="20.0dip"
            />

    </com.android.launcher2.DragLayer>

</com.android.launcher2.PreviewLayout>
